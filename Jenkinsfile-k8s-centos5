pipeline {
    agent none
    environment {
        PROJECT = "TESTING JENKINS SLAVE IN NR"
    }
    stages {
        stage('Run win') {
            agent {
                kubernetes {
                    label 'jenkins-windows-slave'
                    yamlFile 'JenkinsKubernetesPodWindows.yaml'
                }
            }
            steps {
                // The needed steps for your testing
                container('windows') {
                    bat 'dotnet -h'
               }
            }
        }
        stage('Run busybox') {
            agent {
                kubernetes {
                    label 'jenkins-linux-slave'
                    yamlFile 'JenkinsKubernetesPod.yaml'
                }
            }
            steps {
                // The needed steps for your testing
                container('busybox') {
                    sh """
                        echo $PROJECT
                        busybox | head -1
                    """
                   }
            }
        }
    }
}